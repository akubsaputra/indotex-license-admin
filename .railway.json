{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["python"],
      "phases": {
        "install": {
          "commands": [
            "pip install -r requirements.txt"
          ]
        }
      },
      "start": {
        "cmd": "gunicorn admin_server:app --bind 0.0.0.0:$PORT"
      }
    }
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "service": {
    "name": "indotex-license-admin",
    "type": "web",
    "port": 8080,
    "envVars": {
      "ADMIN_USERNAME": "admin",
      "ADMIN_PASSWORD": "supersecret",
      "SECRET_KEY": "indotex-key-123"
    }
  }
}
